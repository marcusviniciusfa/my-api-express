                        },
                        "role_id": {
                          "type": "string",
                          "format": "uuid",
                          "example": "847c4f08-ec9f-4b7f-b452-12d69d86efbe"
                        }
                      }
                    },
                    "token": {
                      "type": "string",
                      "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJlbWFpbCI6InVzZXIuYWRtaW5AZW1haWwuY29tIiwiaWF0IjoxNjc0Nzc0NzM1LCJleHAiOjE2NzQ4NjExMzUsInN1YiI6IjEwODcyOGFlLTgyNGQtNGY2MC05YzQzLWI1MzMxY2U5ODJlOSJ9.yPDgvdwWW1-Dl9rwQWZoXDlYuVW1_x0FjgINFKjjjPM"
