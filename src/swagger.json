          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "default": "error"
                    },
                    "message": {
                      "type": "string",
                      "default": "data/email must match pattern \"^[^@ \t\r\n]+@[^@ \t\r\n]+.[^@ \t\r\n]+$\" ❌"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
