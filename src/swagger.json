                "schema": {
                  "properties": {
                    "user": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string",
                          "format": "uuid",
                          "example": "847c4f08-ec9f-4b7f-b452-12d69d86efbe"
                        },
